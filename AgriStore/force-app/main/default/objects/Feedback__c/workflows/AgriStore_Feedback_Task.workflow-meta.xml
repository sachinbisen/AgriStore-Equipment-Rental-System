<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AgriStore_Feedback_Task</fullName>
    <active>true</active>
    <description>Workflow to create tasks when feedback rating is low</description>
    <rules>
        <fullName>AgriStore_Feedback_Low_Rating_Task</fullName>
        <active>true</active>
        <description>Create task for rental manager when feedback rating is less than 3</description>
        <formula>Rating__c &lt; 3</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <actions>
            <name>AgriStore_Complaint_Investigation_Task</name>
            <type>Task</type>
        </actions>
    </rules>
</Workflow>
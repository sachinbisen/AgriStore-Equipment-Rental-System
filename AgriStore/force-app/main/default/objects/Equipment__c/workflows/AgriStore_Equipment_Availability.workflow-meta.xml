<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AgriStore_Equipment_Availability</fullName>
    <active>true</active>
    <description>Workflow to handle equipment availability changes and notify owners</description>
    <rules>
        <fullName>AgriStore_Equipment_Unavailable_Notify</fullName>
        <active>true</active>
        <description>Send notification to equipment owner when equipment becomes unavailable</description>
        <formula>AND(
    ISCHANGED(Availability__c),
    NOT(Availability__c)
)</formula>
        <triggerType>onAllChanges</triggerType>
        <actions>
            <name>AgriStore_Equipment_Unavailable_Email</name>
            <type>Alert</type>
        </actions>
    </rules>
</Workflow>
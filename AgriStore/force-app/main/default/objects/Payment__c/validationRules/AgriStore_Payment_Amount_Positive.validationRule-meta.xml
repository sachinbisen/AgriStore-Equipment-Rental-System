<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AgriStore_Payment_Amount_Positive</fullName>
    <active>true</active>
    <description>Ensures payment amount is greater than zero</description>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Amount__c)),
    Amount__c &lt;= 0
)</errorConditionFormula>
    <errorDisplayField>Amount__c</errorDisplayField>
    <errorMessage>Payment amount must be greater than zero.</errorMessage>
</ValidationRule>
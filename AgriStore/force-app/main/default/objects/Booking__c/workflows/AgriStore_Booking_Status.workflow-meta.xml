<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AgriStore_Booking_Status</fullName>
    <active>true</active>
    <description>Workflow to handle booking status changes and update equipment availability</description>
    <rules>
        <fullName>AgriStore_Booking_Cancelled_Equipment_Available</fullName>
        <active>true</active>
        <description>When booking is cancelled, make equipment available</description>
        <formula>AND(
    ISCHANGED(Status__c),
    ISPICKVAL(Status__c, "Cancelled")
)</formula>
        <triggerType>onAllChanges</triggerType>
        <actions>
            <name>AgriStore_Equipment_Make_Available</name>
            <type>FieldUpdate</type>
        </actions>
    </rules>
</Workflow>
<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Equipment__c</field>
        <field>Farmer__c</field>
        <field>Start_Date__c</field>
        <field>End_Date__c</field>
        <field>Total_Amount__c</field>
        <field>Status__c</field>
    </approvalPageFields>
    <approvalSteps>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>First level approval by Rental Manager</description>
        <entryCriteria>
            <criteriaItems>
                <field>Booking__c.Total_Amount__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Rental Manager Approval</label>
        <name>Rental_Manager_Approval</name>
    </approvalSteps>
    <approvalSteps>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Second level approval for high-value bookings</description>
        <entryCriteria>
            <criteriaItems>
                <field>Booking__c.Total_Amount__c</field>
                <operation>greaterThan</operation>
                <value>50000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Higher Manager Approval</label>
        <name>Higher_Manager_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalSteps>
    <description>Multi-step approval process for booking requests with escalation for high-value bookings</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Booking__c.Status__c</field>
            <operation>equals</operation>
            <value>Pending</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>AgriStore_Booking_Approved_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>AgriStore_Booking_Status_Confirmed</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>AgriStore_Equipment_Make_Available</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>AgriStore_Equipment_Make_Unavailable</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>AgriStore Booking Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>